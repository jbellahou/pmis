@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Add New Resource</h3>
    </div>
    <form method="post" action="resources?id=@Request.QueryString["id"]" data-parsley-validate>
        <div class="form-group row">
            <label class="col-form-label" for="rname">Resource Name</label>
            <input class="form-control" type="text" name="rname" id="rname" autofocus data-parsley-required data-parsley-maxlength="100">
        </div>
        <div class="form-group row">
            <label class="col-form-label" for="ptype">Pool Type</label>
            <select class="form-control" name="ptype" id="ptype">
                <option value="0">Individual Resource</option>
                <option value="1">Resource Pool</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="col-form-label" for="rtype">Type</label>
            <select class="form-control" name="rtype" id="rtype">
                <option value="Human Resource">Human Resource</option>
                <option value="Material">Material</option>
                <option value="Equipment">Equipment</option>
                <option value="Facility">Facility</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="col-form-label" for="measure">Unit of Measure</label>
            <select class="form-control" name="measure" id="measure">
                <option value=""></option>
                <option value="Unit">Unit</option>
                <option value="Hour">Hour</option>
                <option value="Day">Day</option>
                <option value="Week">Week</option>
                <option value="Month">Month</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="col-form-label" for="cpu">Default Cost per Unit</label>
            <input class="form-control" type="text" name="cpu" id="cpu" data-parsley-type="number">
        </div>
        <div class="form-group row">
            <label class="col-form-label" for="lead">Default Lead Time (in working days)</label>
            <input class="form-control" type="text" name="lead" id="lead" data-parsley-type="integer">
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit" name="SaveType" value="Add" title="Save"><i class="fas fa-save"></i></button>
        </div>
    </form>
</div>