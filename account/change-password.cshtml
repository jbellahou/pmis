@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Change Password</h3>
    </div>
    <form method="post" action="account" data-parsley-validate>
        <div class="form-group row">
            <label for="password">Current Password </label>
            <input type="password" class="form-control" name="password" id="password" autofocus required data-parsley-required>
        </div>
        <div class="form-group row">
            <label for="new-password">New Password </label>
            <input type="password" class="form-control" name="new-password" id="new-password" required data-parsley-required>
        </div>
        <div class="form-group row">
            <label for="confirm">Confirm Password </label>
            <input type="password" class="form-control" name="confirm" id="confirm" required data-parsley-required data-parsley-equalto="#new-password">
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit" name="SaveType" value="Change Password" title="Save"><i class="fas fa-save"></i></button>
        </div>
    </form>
</div>