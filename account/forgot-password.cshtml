@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Forgot Password</h3>
    </div>
    <form method="post" action="do-send-reset-link" data-parsley-validate>
        <div class="form-group row">
            <label for="user_name">User Name (email address) </label>
            <input type="text" class="form-control" name="user_name" id="user_name" autofocus required data-parsley-required>
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit">Click to send a reset link to your email address</button>
        </div>
    </form>
</div>