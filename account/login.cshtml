@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Login</h3>
    </div>
    <form method="post" action="do-login" data-parsley-validate>
        <div class="form-group row">
            <label for="user_name">User Name (email address) </label>
            <input type="text" class="form-control" name="user_name" id="user_name" autofocus required data-parsley-required data-parsley-type="email">
        </div>
        <div class="form-group row">
            <label for="password">Password </label>
            <input type="password" class="form-control" name="password" id="password" required data-parsley-required>
        </div>
        <div class="form-group row">
            <label><input name="rememberme" type="checkbox" id="rememberme" value="forever" /> Remember Me</label>
        </div>
        <div class="form-group row">
            <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
            <button class="btn btn-primary" type="submit" title="Login"><i class="fas fa-sign-in-alt"></i></button>
        </div>
    </form>
    <a href="forgot-password">Forgot password?</a>
    <br />
    <a href="register?ReturnUrl=@Request.QueryString["ReturnUrl"]">Register</a>
</div>