@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">New User</h3>
    </div>
    <form method="post" action="users" data-parsley-validate>
        <div class="form-group row">
            <label for="user_name">User Name (email address) </label>
            <input type="email" class="form-control" name="user_name" id="user_name" autofocus required data-parsley-required data-parsley-type="email">
        </div>
        <div class="form-group row">
            <label for="password">Password </label>
            <input type="password" class="form-control" name="password" id="password" required data-parsley-required>
        </div>
        <div class="form-group row">
            <label for="confirm">Confirm Password </label>
            <input type="password" class="form-control" name="confirm" id="confirm" required data-parsley-required data-parsley-equalto="#password">
        </div>
        <div class="form-group row">
            <label for="fname">First Name </label>
            <input type="text" class="form-control" name="fname" id="fname" required data-parsley-required>
        </div>
        <div class="form-group row">
            <label for="lname">Last Name </label>
            <input type="text" class="form-control" name="lname" id="lname" required data-parsley-required>
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit" name="SaveType" value="Add" title="Save"><i class="fas fa-save"></i></button>
        </div>
    </form>
</div>