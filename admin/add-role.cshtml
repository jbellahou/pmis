@{Layout = "_Layout.cshtml";}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Add Role</h3>
    </div>
    <form method="post" action="roles" data-parsley-validate>
        <div class="form-group row">
            <label for="rname">Role Name</label>
            <input type="text" class="form-control" name="rname" id="rname" autofocus required data-parsley-required>
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit" name="SaveType" value="Add" title="Save"><i class="fas fa-save"></i></button>
        </div>
    </form>
</div>