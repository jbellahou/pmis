@{
    string userLinkClass = "";
    string roleLinkClass = "";
    string procLinkClass = "";
    string docLinkClass = "";
    switch (Request.Url.AbsolutePath)
    {
        case "/admin/roles":
            roleLinkClass = "active";
            break;
        case "/admin/users":
            userLinkClass = "active";
            break;
        case "/admin/processes":
            procLinkClass = "active";
            break;
        case "/admin/defined-documents":
            docLinkClass = "active";
            break;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project MIS Administration</title>
    @RenderPage("~/Shared/load-css.cshtml")
    @RenderPage("~/Shared/load-js.cshtml")
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="../Images/pmis.png" width="25" height="25" alt="">
                Project MIS
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @userLinkClass">
                        <a class="nav-link" href="users">
                            Users
                            @if (userLinkClass == "active")
                            {
                                <span class="sr-only">(current)</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item @roleLinkClass">
                        <a class="nav-link" href="roles">
                            Roles
                            @if (roleLinkClass == "active")
                            {
                                <span class="sr-only">(current)</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item @procLinkClass">
                        <a class="nav-link" href="processes">
                            Processes
                            @if (procLinkClass == "active")
                            {
                                <span class="sr-only">(current)</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item @docLinkClass">
                        <a class="nav-link" href="defined-documents">
                            Defined Documents
                            @if (docLinkClass == "active")
                            {
                                <span class="sr-only">(current)</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Href("~/mypmis/dashboard") title="My Project MIS"><i class="fas fa-toolbox"></i> My Project MIS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Href("~/account/account") title="Account"><i class="fas fa-user-circle"></i> Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Href("~/account/logout") title="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Project MIS</p>
        </footer>
    </div>
</body>
</html>
