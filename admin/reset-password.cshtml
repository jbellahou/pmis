@{Layout = "_Layout.cshtml";}

@{
    string token = WebSecurity.GeneratePasswordResetToken(Request.Form["user_name"]);
}

<div class="container">
    <div class="pmis-detail-page-heading">
        <h3 class="pmis-detail-page-title">Reset Password</h3>
    </div>
    <form method="post" action="users" data-parsley-validate>
        <div class="form-group row">
            <label for="new-password">New Password </label>
            <input type="password" class="form-control" name="new-password" id="new-password" autofocus required data-parsley-required>
        </div>
        <div class="form-group row">
            <label for="confirm">Confirm Password </label>
            <input type="password" class="form-control" name="confirm" id="confirm" required data-parsley-required data-parsley-equalto="#new-password">
        </div>
        <div class="form-group row">
            <input type="hidden" name="token" value="@token" />
            <button class="btn btn-primary" type="submit" name="SaveType" value="Reset Password" title="Save"><i class="fas fa-save"></i></button>
        </div>
    </form>
</div>